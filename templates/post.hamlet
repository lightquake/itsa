<article>
  <div .title>
    <a .title href=@{postRouter post}>#{view _title post}
  <div>
    <div .content>#{view _body post}
    <div .metadata>
     <span .time>
        Posted: #{formatTime defaultTimeLocale "%B %e, %Y" $ utcToZonedTime tz $ __posted post}

     <span .tags>
        $with tags <- view _tags post
          $if not (null tags)
            Tagged: <a href=@{TagR $ head tags}>#{head tags}</a>
            $forall tag <- tail tags
              , <a href=@{TagR tag}>#{tag}</a>

     <div style="clear: both;">